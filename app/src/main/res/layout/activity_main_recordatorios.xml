<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:background="@drawable/back_recordatorios_2" />

    <AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main_recordatorios"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context="com.example.desarrollo_elevation.viveelite.com.example.desarrollo_elevation.babysec.MainActivity_recordatorios">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">


            <AbsoluteLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"

                android:paddingTop="1dp"

                android:paddingRight="1dp"
                >
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:id="@+id/recyclerViewerRecordatorios"
                    android:layout_y="70dp">

                </android.support.v7.widget.RecyclerView>
            </AbsoluteLayout>
        </android.support.v4.widget.NestedScrollView>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarRecordatorios"

            android:layout_width="match_parent"
            android:layout_height="70dp"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_x="2dp"
            android:layout_y="0dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/back_header"
            android:minHeight="?attr/actionBarSize"
            android:title="Eventos"


            android:titleTextColor="#fff"
            tools:ignore="UnusedAttribute" >
            </android.support.v7.widget.Toolbar>

    </AbsoluteLayout>
</FrameLayout>
